@model HSNHospitalProject.Models.Feedback
@{
    ViewBag.Title = "Edit";
}

    <div style="margin-top:3em;margin-left:3em;">
        <h3 style="font-weight:bold;">You can only change the feedback-message</h3>
        
        <form action="/Feedback/Edit/@Model.feedbackId" method="post">
            <div class="form-group">
                <label for="feedbackEmail">Email</label>
                <input type="text" readonly class="form-control" id="feedbackEmail" value="@Model.feedbackEmail" />
            </div>
            <div class="form-group">
                <label for="feedbackMsg">Feedback</label>
                <input type="text" id="feedbackMsg" name="feedbackMsg" class="form-control" value="@Model.feedbackMsg"/>
            </div>
            <div class="form-group">
                <input type="submit" value="UPDATE" class="btn btn-warning" />
            </div>
        </form>

    </div>

