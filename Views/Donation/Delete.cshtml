@{
    ViewBag.Title = "Delete";
}

<h2>Delete Donation</h2>

<h3>Are you sure you want to refund this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.donationName)
        </dd>

        <dt>
            Amount
        </dt>

        <dd>
            @Html.DisplayFor(model => model.donationAmount)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
