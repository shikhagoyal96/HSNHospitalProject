@model HSNHospitalProject.Models.ActivityRecords

@{
    ViewBag.Title = "Edit";
}

<h2>Update Record for @Model.activityrecorddate.ToString("dddd, dd MMMM yyyy")</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.activityrecordid)

        <p>If you would like to change the date for this record, please add a new record instead and delete this one if necessary.</p>
        @Html.HiddenFor(model => model.activityrecorddate)

        <div class="form-group">
            @Html.LabelFor(model => model.activityrecordrating, "Rating (from 1 - 10 ): ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.activityrecordrating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.activityrecordrating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
