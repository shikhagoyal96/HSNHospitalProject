@model HSNHospitalProject.Models.ViewModels.UpdateUserfeedback
    <!--calling the UpdateUserfeedback Viewmodel-->
@{
    ViewBag.Title = "Edit";
}
<!--Here the admin if he wants he can alter the user feedback message only and post it on the homepage
    "note": he can only change the feedbackMsg whereas feedbackEmail and servicesName remains static
    hence cannot change-->
    <div style="margin-top:3em;margin-left:3em;">
        <h3 style="font-weight:bold;">You can only change the feedback-message</h3>

        <form action="/Userfeedback/Edit/@Model.Userfeedbacks.userfeedbackId" method="post">

            <div class="form-group">
                <label for="userfeedbackEmail">Email</label>
                <input type="text" readonly class="form-control" id="userfeedbackEmail" name="userfeedbackEmail" value="@Model.Userfeedbacks.userfeedbackEmail" />
            </div>
            <div class="form-group">
                <label for="feedbackMsg">Feedback</label>
                <input type="text" id="userfeedbackMsg" name="userfeedbackMsg" class="form-control" value="@Model.Userfeedbacks.userfeedbackMsg" />
                <span><p style="color:red; font-weight:bold">* You can only alter the feedback message..</p></span>
            </div>

            <div class="form-group">
                <label for="serviceId">Service Name</label>
                <input type="text" readonly class="form-control" id="serviceId" name="serviceId" value="@Model.Userfeedbacks.Services.servicesName" />
            </div>

            <div class="form-group">
                <input type="submit" value="UPDATE" class="btn btn-warning" />
            </div>
        </form>

    </div>

